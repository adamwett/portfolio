{
    "$schema": "https://biomejs.dev/schemas/1.8.0/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "nursery": {
                "useSortedClasses": "on"
            },
            "style": {
                "useImportType": "off",
                "useTemplate": {
                    "level": "warn",
                    "fix": "unsafe"
                }
            }
        }
    }
}
